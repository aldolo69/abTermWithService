<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/border_focused"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/popup_cep_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0px"
        android:background="@android:color/background_dark"
        android:orientation="vertical"
        android:padding="0px" >

 
        <LinearLayout
            android:id="@+id/popup_mainmenu_settings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"   >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/popup_mainmenu_settings"
                android:textSize="10pt" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_mainmenu_quit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
              >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/popup_mainmenu_quit"
                android:textSize="10pt" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>
     </LinearLayout>

</LinearLayout>